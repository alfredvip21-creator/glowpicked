    }
  ],
  "luxury": [
    {
      "name": "Medicube Age-R Booster Pro",
      "asin": "B0CWK6YQ7V",
      "rating": 4.6,
      "reviewCount": 3000,
      "pros": [
        "6-in-1 device: EMS, LED, vibration",
