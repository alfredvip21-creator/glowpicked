---
import Layout from '../../layouts/Layout.astro';

const products = {
  "budget": [
    {
      "name": "Medicube Jelly Brush",
      "asin": "B0D1XLXSSY",
      "rating": 4.3,
      "reviewCount": 3000,
      "pros": [
        "Silicone is hygienic and easy to clean",
        "Even mask application",
        "Affordable entry to K-beauty tools"
      ],
      "con": "Basic tool, limited functionality"
    },
    {
      "name": "FOREO Luna Mini 3",
      "asin": "B082965B6F",
      "rating": 4.5,
      "reviewCount": 1000,
      "pros": [
        "T-Sonic pulsations deep cleanse",
        "Waterproof, long battery life",
        "Silicone is more hygienic than bristles"
      ],
      "con": "No app connectivity like newer models"
    },
    {
      "name": "PMD Personal Microderm Pro",
      "asin": "B00C2F61KY",
