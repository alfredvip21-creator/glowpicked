---
import Layout from '../../layouts/Layout.astro';

const products = {
  budget: [
    {
      name: "CeraVe Vitamin C Serum",
      asin: "B07PNCCLD2",
      rating: 4.4,
      reviewCount: 43000,
      pros: [
        "Stable vitamin C brightens skin",
        "Hyaluronic acid adds hydration",
        "Gentle for daily use"
      ],
      con: "Light citrus scent"
    },
    {
      name: "The Ordinary Hyaluronic Acid 2% + B5",
      asin: "B01MYEZPC8",
      rating: 4.3,
      reviewCount: 32000,
      pros: [
        "Multi-molecular weight HA",
        "Affordable high performance",
        "Improves skin plumpness"
      ],
      con: "Sticky if over-applied"
    },
    {
      name: "La Roche-Posay Pure Vitamin C Serum",
      asin: "B07PM79MSC",
      rating: 4.5,
      reviewCount: 19000,
      pros: [
        "10% pure vitamin C + salicylic acid",
        "Reduces dark spots",
        "Dermatologist recommended"
      ],
      con: "Can sting sensitive skin initially"
    }
  ],
  luxury: [
    {
      name: "RoC Retinol Correxion Deep Wrinkle Serum",
      asin: "B00387F42G",
      rating: 4.5,
      reviewCount: 31000,
      pros: [
        "Pure retinol smooths wrinkles",
        "Clinical results in weeks",
        "Gentle for retinol beginners"
      ],
      con: "Requires nighttime use"
    },
    {
      name: "SkinCeuticals Retinol 0.5",
      asin: "B0084Y59VO",
      rating: 4.6,
      reviewCount: 2100,
      pros: [
        "Medical-grade 0.5% retinol",
        "Refines texture dramatically",
        "Proven brand efficacy"
      ],
      con: "Expensive per ml"
    },
    {
      name: "Augustinus Bader The Retinol Serum",
      asin: "B07FCD5QZC",
      rating: 4.7,
      reviewCount: 1400,
      pros: [
        "TFC8 technology + retinol",
        "Repairs and renews",
        "Luxury results"
      ],
      con: "Very high price"
    }
  ]
};


// Find top pick in each tier (highest rating)
const budgetTopIdx = products.budget.reduce((best, p, i) => p.rating > products.budget[best].rating ? i : best, 0);
const luxuryTopIdx = products.luxury.reduce((best, p, i) => p.rating > products.luxury[best].rating ? i : best, 0);

const schemaItems = [...products.budget, ...products.luxury].map((p, i) => ({
  "@type": "ListItem",
  "position": i + 1,
  "item": {
    "@type": "Product",
    "name": p.name,
    "url": `https://www.amazon.com/dp/${p.asin}/ref=nosim?tag=glowpicked0c-20`,
    "aggregateRating": {
      "@type": "AggregateRating",
      "ratingValue": p.rating,
      "bestRating": 5,
      "reviewCount": p.reviewCount
    }
  }
}));

const pageSchema = JSON.stringify({
  "@context": "https://schema.org",
  "@type": "ItemList",
  "name": `Best Serums 2026 - Budget & Luxury Picks`,
  "description": `AI-analyzed reviews for top serums on Amazon`,
  "numberOfItems": 6,
  "itemListElement": schemaItems
});
---

<Layout 
  title="Best Serums 2026 | Top Budget & Luxury | GlowPicked"
  description="We researched Amazon customer reviews to find the top 3 budget and top 3 luxury serums on Amazon."
>
  <section class="products-section">
    <div class="container">
      <div class="page-header">
        <h1>Best Serums</h1>
        <p class="last-updated">üìÖ Last updated: February 2026</p>
        <p class="lead-text">We researched top-rated Amazon products and customer reviews to find the best picks</p>
      </div>

      <section class="budget-section">
        <h2><span class="accent-budget">üèÜ Top 3 Budget</span> (Under $30)</h2>
        <div class="products-grid">
          {products.budget.map((product, index) => (
            <div class="product-card" key={product.asin} data-asin={product.asin}>
              {index === budgetTopIdx && <div class="top-pick-badge">üèÖ Our Top Pick</div>}
              <h3 class="product-name">{product.name}</h3>
              <div class="product-meta">
                <span class="rating">{product.rating}‚≠ê</span>
                <span class="reviews">Based on {product.reviewCount.toLocaleString()}+ Amazon customer ratings</span>
              </div>
              <ul class="pros-list">
                {product.pros.map((pro, i) => (
                  <li key={i}>‚úÖ {pro}</li>
                ))}
              </ul>
              <div class="con">
                ‚ùå {product.con}
              </div>
              <div class="cta-wrapper">
                <a href={`https://www.amazon.com/dp/${product.asin}/ref=nosim?tag=glowpicked0c-20`} class="cta-button" target="_blank" rel="nofollow sponsored">
                  Check Price on Amazon
                </a>
              </div>
            </div>
          ))}
        </div>
      </section>

      <section class="luxury-section">
        <h2><span class="accent-luxury">üíé Top 3 Luxury</span></h2>
        <div class="products-grid">
          {products.luxury.map((product, index) => (
            <div class="product-card" key={product.asin} data-asin={product.asin}>
              {index === luxuryTopIdx && <div class="top-pick-badge">üèÖ Our Top Pick</div>}
              <h3 class="product-name">{product.name}</h3>
              <div class="product-meta">
                <span class="rating">{product.rating}‚≠ê</span>
                <span class="reviews">Based on {product.reviewCount.toLocaleString()}+ Amazon customer ratings</span>
              </div>
