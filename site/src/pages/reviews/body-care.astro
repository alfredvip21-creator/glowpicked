    {
      "name": "NIVEA Essentially Enriched Body Lotion",
      "asin": "B00DG8F04Y",
      "rating": 4.7,
      "reviewCount": 46000,
      "pros": [
        "72-hour deep nourishing moisture",
        "Almond oil and hyaluronic acid",
        "Incredible value, large bottle"
      ],
      "con": "Thick texture takes time to absorb"
    },
    {
      "name": "eos Shea Better Body Lotion Vanilla Cashmere",
      "asin": "B08KT2Z93D",
      "rating": 4.5,
      "reviewCount": 63000,
      "pros": [
        "24-hour shea butter moisture",
        "Vanilla cashmere scent is heavenly",
        "Lightweight, non-greasy"
      ],
