---
import Layout from '../../layouts/Layout.astro';

const products = {
  "budget": [
    {
      "name": "LilyAna Naturals Eye Cream",
      "asin": "B00LV6VDG2",
      "rating": 4.5,
      "reviewCount": 36000,
      "pros": [
        "Reduces dark circles and puffiness",
        "Lightweight, non-greasy formula",
        "Made in USA, natural ingredients"
      ],
      "con": "Takes 4-6 weeks for visible results"
    },
    {
      "name": "RoC Retinol Correxion Under Eye Cream",
      "asin": "B0009RFB76",
      "rating": 4.4,
      "reviewCount": 42000,
      "pros": [
        "Clinically proven retinol formula",
        "Visibly reduces fine lines",
        "Affordable anti-aging eye care"
      ],
      "con": "May irritate sensitive skin initially"
    },
    {
      "name": "CeraVe Eye Repair Cream",
      "asin": "B01ET24GI4",
      "rating": 4.6,
      "reviewCount": 6200,
      "pros": [
        "Ceramides restore skin barrier",
        "Gentle enough for daily use",
        "Dermatologist recommended"
      ],
      "con": "Small tube for the price"
    }
  ],
  "luxury": [
    {
      "name": "BeautyStat Universal C Eye Perfector",
      "asin": "B08S1HL476",
      "rating": 4.7,
      "reviewCount": 2100,
      "pros": [
        "20% Vitamin C brightens dark circles",
        "Clinically tested formula",
        "Reduces puffiness on contact"
      ],
      "con": "Premium price point"
    },
    {
      "name": "Sunday Riley Auto Correct Eye Cream",
      "asin": "B07B8DZN6B",
      "rating": 4.5,
      "reviewCount": 1000,
      "pros": [
        "Caffeine and ginseng depuff instantly",
        "Brightening peptide complex",
        "Luxury texture absorbs fast"
      ],
      "con": "Expensive for amount provided"
    },
    {
      "name": "Brickell Men's Restoring Eye Cream",
      "asin": "B00QL67MY4",
      "rating": 4.3,
      "reviewCount": 7000,
      "pros": [
        "Designed specifically for men",
        "Natural and organic ingredients",
        "Reduces crow's feet effectively"
      ],
      "con": "Unscented version only"
    }
  ]
};


// Find top pick in each tier (highest rating)
const budgetTopIdx = products.budget.reduce((best, p, i) => p.rating > products.budget[best].rating ? i : best, 0);
const luxuryTopIdx = products.luxury.reduce((best, p, i) => p.rating > products.luxury[best].rating ? i : best, 0);

const schemaItems = [...products.budget, ...products.luxury].map((p, i) => ({
  "@type": "ListItem",
  "position": i + 1,
  "item": {
    "@type": "Product",
    "name": p.name,
    "url": `https://www.amazon.com/dp/${p.asin}/ref=nosim?tag=glowpicked0c-20`,
    "aggregateRating": {
      "@type": "AggregateRating",
      "ratingValue": p.rating,
      "bestRating": 5,
      "reviewCount": p.reviewCount
    }
  }
}));

const pageSchema = JSON.stringify({
  "@context": "https://schema.org",
  "@type": "ItemList",
  "name": `Best Eye Creams 2026 - Budget & Luxury Picks`,
  "description": `AI-analyzed reviews for top eye creams on Amazon`,
  "numberOfItems": 6,
  "itemListElement": schemaItems
});
---

<Layout 
  title="Best Eye Creams 2026 | Top Budget & Luxury | GlowPicked"
  description="We researched Amazon customer reviews to find the top 3 budget and top 3 luxury best eye creams on Amazon."
>
  <section class="products-section">
    <div class="container">
      <div class="page-header">
        <h1>Best Eye Creams</h1>
        <p class="last-updated">üìÖ Last updated: February 2026</p>
        <p class="lead-text">We researched top-rated Amazon products and customer reviews to find the best picks</p>
      </div>

      <section class="budget-section">
        <h2><span class="accent-budget">üèÜ Top 3 Budget</span> (Under $25)</h2>
        <div class="products-grid">
          {products.budget.map((product, index) => (
            <div class="product-card" data-asin={product.asin}>
              {index === budgetTopIdx && <div class="top-pick-badge">üèÖ Our Top Pick</div>}
              <h3 class="product-name">{product.name}</h3>
              <div class="product-meta">
                <span class="rating">{product.rating}‚≠ê</span>
                <span class="reviews">Based on {product.reviewCount.toLocaleString()}+ Amazon customer ratings</span>
              </div>
              <ul class="pros-list">
                {product.pros.map((pro) => (
                  <li>‚úÖ {pro}</li>
                ))}
              </ul>
              <div class="con">
                ‚ùå {product.con}
              </div>
              <div class="cta-wrapper">
                <a href={`https://www.amazon.com/dp/${product.asin}/ref=nosim?tag=glowpicked0c-20`} class="cta-button" target="_blank" rel="nofollow sponsored">
                  Check Price on Amazon
                </a>
              </div>
            </div>
          ))}
        </div>
      </section>

      <section class="luxury-section">
        <h2><span class="accent-luxury">üíé Top 3 Luxury</span></h2>
        <div class="products-grid">
          {products.luxury.map((product, index) => (
            <div class="product-card" data-asin={product.asin}>
              {index === luxuryTopIdx && <div class="top-pick-badge">üèÖ Our Top Pick</div>}
              <h3 class="product-name">{product.name}</h3>
              <div class="product-meta">
                <span class="rating">{product.rating}‚≠ê</span>
                <span class="reviews">Based on {product.reviewCount.toLocaleString()}+ Amazon customer ratings</span>
              </div>
              <ul class="pros-list">
                {product.pros.map((pro) => (
                  <li>‚úÖ {pro}</li>
                ))}
              </ul>
              <div class="con">
                ‚ùå {product.con}
              </div>
              <div class="cta-wrapper">
                <a href={`https://www.amazon.com/dp/${product.asin}/ref=nosim?tag=glowpicked0c-20`} class="cta-button" target="_blank" rel="nofollow sponsored">
                  Check Price on Amazon
                </a>
              </div>
            </div>
          ))}
        </div>
      </section>
    </div>
  </section>

  <section class="methodology-section">
    <div class="container">
      <h2>How We Pick Products</h2>
      <p>
        Our team uses AI tools to research popular Amazon products in each category.
        We look at overall ratings, review volume, common praise and complaints, and value for money.
        Products are selected based on consistent positive feedback from real customers.
        We do not physically test products ‚Äî our recommendations are based entirely on
        published customer review data from Amazon.
      </p>
    </div>
  </section>

  
  
  <section class="buying-guide">
    <div class="container">
      <h2>Buying Guide</h2>
      <p class="guide-intro">The skin around your eyes is the thinnest on your face ‚Äî it's the first area to show aging, fatigue, and dehydration. A dedicated eye cream targets concerns regular moisturizers can't.</p>
      <h3>Quick Tips</h3>
      <ul class="guide-tips">
            <li>üí° Caffeine is the #1 ingredient for depuffing ‚Äî look for it in morning eye creams</li>
            <li>üí° Retinol eye creams should be gentler than face retinol (0.025-0.05%)</li>
            <li>üí° Pat (don't rub) eye cream with your ring finger ‚Äî it applies the least pressure</li>
            <li>üí° Dark circles can be genetic ‚Äî if creams don't help, vitamin C may brighten the area</li>
      </ul>
    </div>
  </section>

  <section class="related-section">
