---
import Layout from '../../layouts/Layout.astro';

const products = {
  "budget": [
    {
      "name": "Aquaphor Lip Repair Ointment",
      "asin": "B004FHZKOA",
      "rating": 4.7,
      "reviewCount": 44000,
      "pros": [
        "Heals severely cracked lips fast",
        "Petrolatum seals in moisture",
        "Dermatologist recommended #1"
      ],
      "con": "Basic packaging, no color"
    },
    {
      "name": "Burt's Bees Beeswax Lip Balm (4-Pack)",
      "asin": "B0054LHI5A",
      "rating": 4.7,
      "reviewCount": 69000,
      "pros": [
        "Natural beeswax formula",
        "Peppermint tingle feels refreshing",
        "4-pack incredible value"
      ],
