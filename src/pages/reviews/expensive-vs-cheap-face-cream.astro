    color: var(--text);
  }

  .ingredients ul,
  .claims ul {
    list-style: none;
    padding: 0;
  }

  .ingredients li,
  .claims li {
    background: var(--bg-light);
    padding: 0.5rem 1rem;
    margin-bottom: 0.5rem;
    border-radius: var(--border-radius);
    font-size: 0.9rem;
    color: var(--text-light);
  }

  .buy-button {
