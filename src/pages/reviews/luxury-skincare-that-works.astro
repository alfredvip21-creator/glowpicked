    image: "/images/tatcha-water-cream.jpg"
  },
  {
    name: "Sunday Riley Luna Sleeping Night Oil",
    price: "$105",
    amazonPrice: "$105.00",
    amazonUrl: "https://amazon.com/dp/B017539VFE",
