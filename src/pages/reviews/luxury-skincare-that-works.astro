import Layout from '../../layouts/Layout.astro';

// Article data
const article = {
  title: "12 Luxury Skincare Products That Actually Work",
  description: "Our AI analyzed 10,000+ verified customer reviews of the most expensive skincare products on Amazon. Here are the 12 that consistently delivered results - and the truth about the rest.",
  publishDate: "February 16, 2026",
  readTime: "12 min read",
  author: "GlowPicked AI Team",
  category: "Skincare",
  rating: "9.2/10",
