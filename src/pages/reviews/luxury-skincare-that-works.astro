];

const failedProducts = [
  {
    name: "La Prairie Cellular Recovery Serum",
    price: "$485",
    why: "No visible results after 8 weeks - just expensive water"
  },
  {
    name: "Sisley Black Rose Cream Mask", 
    price: "$162",
    why: "Nice texture but zero difference from drugstore masks"
  },
  {
    name: "Chanel Le Lift Cr√®me",
