<style>
  .reviews-hub-hero {
    background: linear-gradient(135deg, #FFE0E6 0%, #FFF5F7 100%);
    padding: 4rem 0 2rem;
    text-align: center;
  }

  .hero-title {
    font-size: 3rem;
    font-weight: 700;
    margin-bottom: 1rem;
    font-family: 'Playfair Display', serif;
    color: var(--text);
  }

  .hero-description {
    font-size: 1.25rem;
    color: var(--text-light);
    max-width: 700px;
    margin: 0 auto;
    line-height: 1.6;
  }

  .categories-section {
    padding: 2rem 0 4rem;
  }

  .categories-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
  }

  .category-card {
    background: white;
    border-radius: var(--border-radius);
    box-shadow: var(--shadow);
    padding: 2.5rem 2rem;
    text-decoration: none;
    color: var(--text);
    text-align: center;
    transition: all 0.3s ease;
  }

  .category-card:hover {
    transform: translateY(-8px);
    box-shadow: var(--shadow-lg);
  }

  .category-icon {
    font-size: 4rem;
    margin-bottom: 1rem;
    display: block;
  }

  .category-name {
    font-size: 1.75rem;
    font-weight: 700;
    margin-bottom: 0.5rem;
    font-family: 'Playfair Display', serif;
  }

  .category-desc {
    color: var(--text-light);
    font-size: 1.1rem;
    margin-bottom: 0;
  }

  @media (max-width: 768px) {
    .hero-title {
      font-size: 2.5rem;
    }

    .categories-grid {
      grid-template-columns: 1fr;
      gap: 1.5rem;
    }

    .category-card {
      padding: 2rem 1.5rem;
    }
  }
</style>